%h1 Listing lists

.row
  %ul.list-group
    - @lists.each do |list|
      %li.list-group-item
        %span.badge(style='margin-left: 20px')= list.todos.count
        = list.title
        
        .pull-right
          %a.btn.btn-default.btn-sm(href='#{list_path(list)}') Show
          %a.btn.btn-default.btn-sm(href='#{edit_list_path(list)}') Edit
          = link_to "Shared link", shared_path(list.token),
            class: "btn btn-default btn-sm"
          = link_to "Delete", list_path(list),
            method: :delete,
            data: { confirm: 'Are you certain you want to delete this?' },
            class: "btn btn-default btn-sm"

%br

= link_to 'New List', new_list_path, class: "btn btn-default"
